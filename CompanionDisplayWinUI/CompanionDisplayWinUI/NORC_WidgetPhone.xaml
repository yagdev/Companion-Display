<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CompanionDisplayWinUI.NORC_WidgetPhone"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CompanionDisplayWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="300" Width="500" Tag="ControlWidgets">

    <Grid>
        
        <Grid>
            <Rectangle Fill="Transparent" Opacity="0" RightTapped="Frame_RightTapped"/>
            <TextBlock Name="NoDevices" Text="No devices.
                       Connect an Android device with ADB enabled." FontSize="40" TextWrapping="Wrap" HorizontalTextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50,0,50,0" Opacity="0.5" IsHitTestVisible="False"/>
            <Grid Name="MainGrid" MinWidth="500" MinHeight="300" Margin="2,0,0,0" Loaded="MainGrid_Loaded">
                <GridView Name="BasicGridView" SelectionMode="None" CanDragItems="False" Padding="0,-2,0,0" HorizontalAlignment="Center">
                </GridView>
            </Grid>
        </Grid>
    </Grid>
</Page>
