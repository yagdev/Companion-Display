<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CompanionDisplayWinUI.PopupWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CompanionDisplayWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Closed="Window_Closed"
    Title="PopupWidget">
    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>
    <Grid RightTapped="Grid_RightTapped" Background="Transparent" Loaded="Grid_Loaded">
        <Grid x:Name="WidgetGrid" Unloaded="WidgetGrid_Unloaded" Padding="-10"/>
        <ToggleButton Content="&#xe718;" Margin="0,0,50,0" Height="32" FontSize="12" Width="30" VerticalAlignment="Top" Padding="0" HorizontalAlignment="Right" Background="Transparent" BorderBrush="Transparent" FontFamily="Segoe Fluent Icons" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked"/>
    </Grid>
    
    
</Window>
