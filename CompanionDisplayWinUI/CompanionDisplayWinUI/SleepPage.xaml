<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CompanionDisplayWinUI.SleepPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CompanionDisplayWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black" Unloaded="Page_Unloaded" Loaded="Page_Loaded" >

    <Grid>
        <HyperlinkButton Name="Oppenheimer" Width="50" Height="50" FontFamily="Segoe Fluent Icons" HorizontalAlignment="Left" VerticalAlignment="Top" Content="&#xe700;" Click="HyperlinkButton_Click"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Name="StackUnderflow">
            <TextBlock Name="Date" Text="01/01/1970" FontSize="32" FontWeight="Thin" Opacity="0.5" HorizontalAlignment="Center" FontFamily="{ThemeResource ContentControlThemeFontFamily}"/>
            <TextBlock Name="Time" Text="00:00" FontSize="144" HorizontalAlignment="Center" FontWeight="Thin" Opacity="1" FontFamily="{ThemeResource ContentControlThemeFontFamily}"/>
            <TextBlock Name="SongTitle" Text="Song · Artist · Year" FontSize="32" FontWeight="Thin" Opacity="0.5" HorizontalAlignment="Center" FontFamily="{ThemeResource ContentControlThemeFontFamily}"/>
            <TextBlock Name="Lyrics" Text="-" FontSize="24" FontWeight="Thin" Opacity="0.5" HorizontalAlignment="Center" FontFamily="{ThemeResource ContentControlThemeFontFamily}"/>
        </StackPanel>
    </Grid>
</Page>
