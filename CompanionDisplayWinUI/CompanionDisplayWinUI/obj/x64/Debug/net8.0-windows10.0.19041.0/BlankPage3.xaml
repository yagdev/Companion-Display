<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="CompanionDisplayWinUI.BlankPage3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CompanionDisplayWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     >

    <ScrollViewer x:ConnectionId='2' Name="MainScroll" Padding="10,35,10,0">
        <StackPanel Spacing="10">
            <TextBlock Text="Settings" FontSize="28" Padding="0" FontFamily="Segoe Variable Display" FontWeight="SemiBold"/>
            <Expander HorizontalAlignment="Stretch"
     IsExpanded="False"
     ExpandDirection="Down"
     VerticalAlignment="Top"
     HorizontalContentAlignment="Stretch"
     Header="Theme">
                <Expander.Content>
                    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Spacing="20">
                        <Grid>
                            <TextBlock Text="Color Scheme" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,0"/>
                            <ComboBox x:ConnectionId='20' Name="ColorSchemeSelect" SelectedIndex="0"                                              PlaceholderText="System Automatic" HorizontalAlignment="Right"  VerticalAlignment="Top">
                                <x:String>System Automatic</x:String>
                                <x:String>Dark</x:String>
                                <x:String>Light</x:String>
                            </ComboBox>
                        </Grid>
                        <Grid>
                            <TextBlock Text="Accent Color" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,0"/>
                            <ComboBox x:ConnectionId='19' Name="AccentSelect"                                                PlaceholderText="System Automatic" HorizontalAlignment="Right"  VerticalAlignment="Top">
                                <x:String>System Automatic</x:String>
                                <x:String>Custom</x:String>
                            </ComboBox>
                        </Grid>
                        <Grid>
                            <StackPanel>
                                <Expander HorizontalAlignment="Stretch" Header="Custom Color">
                                    <StackPanel>
                                        <ColorPicker x:ConnectionId='17' Name="AccentColorPicker"/>
                                        <Button x:ConnectionId='18' Content="Save" HorizontalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}"                     />
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </Grid>
                        <Grid>
                            <TextBlock Text="Background " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,0"/>
                            <ComboBox x:ConnectionId='16' Name="BackdropSelect"                                                PlaceholderText="Acrylic" HorizontalAlignment="Right"  VerticalAlignment="Top" SelectedIndex="1">
                                <x:String>Acrylic</x:String>
                                <x:String>Mica</x:String>
                                <x:String>Image</x:String>
                                <x:String>Album Cover</x:String>
                                <x:String>Solid Color</x:String>
                            </ComboBox>
                        </Grid>
                        <Expander HorizontalAlignment="Stretch" Header="Custom" HorizontalContentAlignment="Stretch">
                            <StackPanel HorizontalAlignment="Stretch" Spacing="10">
                                <Grid>
                                    <TextBlock HorizontalAlignment="Left" Text="Background Image" VerticalAlignment="Center"/>
                                    <TextBox x:ConnectionId='14' Name="BackgroundLink" Margin="0,0,110,0" Width="300" HorizontalAlignment="Right" PlaceholderText="Media URL" VerticalAlignment="Center"                                     />
                                    <Button x:ConnectionId='15' HorizontalAlignment="Right" Content="Select Image" Style="{StaticResource AccentButtonStyle}"                       />
                                </Grid>
                                <Grid>
                                    <TextBlock Text="Blur" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,0"/>
                                    <ToggleSwitch x:ConnectionId='13' Name="ImageBlurToggle" HorizontalAlignment="Right" VerticalAlignment="Center" OffContent="" OnContent="" IsOn="True"                                   Margin="0,0,-110,0"/>
                                </Grid>
                                <Expander HorizontalAlignment="Stretch" Header="Custom Color">
                                    <StackPanel>
                                        <ColorPicker x:ConnectionId='11' Name="BackgroundColorPicker"/>
                                        <Button x:ConnectionId='12' Content="Save" HorizontalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}"                       />
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Expander.Content>
            </Expander>
            <Expander HorizontalAlignment="Stretch" Header="Behavior" HorizontalContentAlignment="Stretch">
                <StackPanel Spacing="20">
                    <Grid>
                        <TextBlock Text="Stop app from stealing focus" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ToggleSwitch x:ConnectionId='10' Name="FocusToggle" HorizontalAlignment="Right" VerticalAlignment="Center" OffContent="" OnContent="" IsOn="True"                                Margin="0,0,-110,0"/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Hide Add Widget Button" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ToggleSwitch x:ConnectionId='9' Name="AddButtonToggle" HorizontalAlignment="Right" VerticalAlignment="Center" OffContent="" OnContent="" IsOn="False"                                   Margin="0,0,-110,0"/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Launch on startup" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ToggleSwitch x:ConnectionId='8' Name="StartupToggle" HorizontalAlignment="Right" VerticalAlignment="Center" OffContent="" OnContent="" IsOn="False"                                 Margin="0,0,-110,0"/>
                    </Grid>
                </StackPanel>
            </Expander>
            <Expander HorizontalAlignment="Stretch" Header="About &amp; Updates" HorizontalContentAlignment="Stretch">
                <StackPanel Spacing="20">
                    <Image x:ConnectionId='3' Name="AppIconImg" Source="https://i.imgur.com/Llq7YZA.png" Height="100" Margin="0,-10,0,0"/>
                    <TextBlock Text="Companion Display" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,-20,0,0"/>
                    <Grid>
                        <TextBlock Text="Version" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='7' Name="VersionString" Text="-" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Enable Beta Updates" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ToggleSwitch x:ConnectionId='6' Name="UpdateToggle" HorizontalAlignment="Right" VerticalAlignment="Center" OffContent="" OnContent="" IsOn="False"                                Margin="0,0,-110,0"/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Update" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <Button x:ConnectionId='5' Name="UpdateBtn" IsEnabled="False" Content="Checking for updates..." HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource AccentButtonStyle}"                       />
                    </Grid>
                    <Grid>
                        <TextBlock Text="Made with ❤︎ by YAG-dev" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <HyperlinkButton x:ConnectionId='4' Content="GitHub" HorizontalAlignment="Right" VerticalAlignment="Center"                       />
                    </Grid>
                </StackPanel>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</Page>

