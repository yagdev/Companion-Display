<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="CompanionDisplayWinUI.FanSensor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CompanionDisplayWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                                              >

    <Grid>
        <Rectangle Fill="{ThemeResource SystemBaseLowColor}" Opacity="0.3"/>
        <ProgressRing x:ConnectionId='2' Name="TempProgress" Width="30" Height="30" Value="0" HorizontalAlignment="Right" Margin="0,0,10,0" 
IsIndeterminate="False"
Background="LightGray"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Fan" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBlock x:ConnectionId='4' Name="SensorName"  Text="-" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{ThemeResource SystemBaseMediumColor}"/>
        </StackPanel>
        <TextBlock x:ConnectionId='3' Name="LoadPercent" Text="-RPM" FontSize="20" VerticalAlignment="Center" Margin="0,0,50,0" HorizontalAlignment="Right"/>
    </Grid>
</Page>

