<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="CompanionDisplayWinUI.NORC_WidgetApps"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CompanionDisplayWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="500" Height="300"                     >

    <Grid>
        <Rectangle x:ConnectionId='2' Fill="{ThemeResource SystemBaseLowColor}" Opacity="0.3"                                   />
        <TextBlock x:ConnectionId='3' Name="EmptyApps" Text="It's looking a little empty here. Right click and press edit to add apps." FontSize="40" TextWrapping="Wrap" HorizontalTextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50,0,50,0" Opacity="0.5" IsHitTestVisible="False"/>
        <Grid x:ConnectionId='4' Name="MainGrid" MaxWidth="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            <GridView x:ConnectionId='5' Name="BasicGridView" CanDragItems="True" CanReorderItems="True" SelectionMode="None" AllowDrop="True"                                                      >
            </GridView>
        </Grid>
    </Grid>
</Page>

