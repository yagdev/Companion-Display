<Page
    x:Class="CompanionDisplayWinUI.SetupStep0"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CompanionDisplayWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <GridView VerticalAlignment="Center" HorizontalAlignment="Center" SelectionMode="None">
        <Grid Height="300">
            <StackPanel Spacing="5" VerticalAlignment="Center">
                <Image x:ConnectionId='4' Name="AppIconImg" Source="https://i.imgur.com/EXoHTmI.png" Height="100" Margin="0,-10,0,0"/>
                <TextBlock Text="Welcome to Companion Display" FontSize="24" HorizontalAlignment="Center"/>
                <TextBlock Text="Get started using Companion Display" FontSize="18" HorizontalAlignment="Center" Opacity="0.8"/>
            </StackPanel>
        </Grid>
        <Grid Height="300">
            <StackPanel Spacing="5" VerticalAlignment="Center">
                <Button x:ConnectionId='2' Content="Get Started" HorizontalAlignment="Center" Height="50" Width="250" Background="{ThemeResource AccentAAFillColorDefaultBrush}"                        CornerRadius="8"/>
                <HyperlinkButton x:ConnectionId='3' Content="Skip Setup" HorizontalAlignment="Center" Width="250" Foreground="{ThemeResource TextFillColorPrimary}" Opacity="0.8"                                 CornerRadius="8"/>
                <TextBlock Text="Setup is also available in Settings" Opacity="0.6" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </GridView>
</Page>

