<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="CompanionDisplayWinUI.SmallDataSensor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CompanionDisplayWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                                               Height="35">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Small Data" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBlock x:ConnectionId='3' Name="SensorName" Text="-" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{ThemeResource SystemBaseMediumColor}"/>
        </StackPanel>
        <TextBlock x:ConnectionId='2' Name="LoadPercent" Text="-MB" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0" HorizontalAlignment="Right"/>
    </Grid>
</Page>

