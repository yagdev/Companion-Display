<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="CompanionDisplayWinUI.IndividualAudioControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CompanionDisplayWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                                 
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' Name="GridMain" Height="50">
        <Image x:ConnectionId='3' Height="30" Width="30" HorizontalAlignment="Left" Margin="10" Name="ProcessImage"                        />
        <SymbolIcon x:ConnectionId='4' Symbol="Volume" Height="30" Width="30" Margin="10" HorizontalAlignment="Left" Name="SysIcon"                        />
        <TextBlock x:ConnectionId='5' Margin="50,5,300,5" Text="-" VerticalAlignment="Center" Name="ProcessName"/>
        <Slider x:ConnectionId='6' Margin="190,5,10,5" VerticalAlignment="Center" Name="Volume"                                                                                                                                            ManipulationMode="All"/>
    </Grid>
</Page>

