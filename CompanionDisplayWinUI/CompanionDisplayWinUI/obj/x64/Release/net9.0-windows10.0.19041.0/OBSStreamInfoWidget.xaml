<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="CompanionDisplayWinUI.OBSStreamInfoWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:local="using:CompanionDisplayWinUI"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
mc:Ignorable="d" Tag="OBSWidgets" Width="500" Height="300" CanDrag="False"                                              >

    <Grid>
        <FlipView Background="Transparent">
            <Grid>
                <TextBlock Text="OBS Stats" FontSize="36" Margin="10"/>
                <ScrollViewer Margin="15,55,15,0">
                    <StackPanel>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Frames Rendered" FontSize="20"/>
                            <TextBlock x:ConnectionId='23' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="OBSRendered"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Missed" FontSize="20"/>
                            <TextBlock x:ConnectionId='22' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="OBSMissed"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Output Total" FontSize="20"/>
                            <TextBlock x:ConnectionId='21' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="OBSOutputTotal"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Average Render Time" FontSize="20"/>
                            <TextBlock x:ConnectionId='20' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="OBSAvgRenderTime"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Framerate" FontSize="20"/>
                            <TextBlock x:ConnectionId='19' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="OBSFramerate"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="OBS CPU Usage" FontSize="20"/>
                            <TextBlock x:ConnectionId='18' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="OBSCPUUsage"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="OBS RAM Usage" FontSize="20"/>
                            <TextBlock x:ConnectionId='17' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="OBSRAMUsage"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <Grid>
                <TextBlock Text="Stream Info" FontSize="36" Margin="10"/>
                <ScrollViewer Margin="10,55,10,0">
                    <StackPanel>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Streaming" FontSize="20"/>
                            <TextBlock x:ConnectionId='16' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="StreamingStatus"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Reconnecting" FontSize="20"/>
                            <TextBlock x:ConnectionId='15' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="ReconnectingStats"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Time Code" FontSize="20"/>
                            <TextBlock x:ConnectionId='14' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="StreamTimeCode"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Duration" FontSize="20"/>
                            <TextBlock x:ConnectionId='13' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="StreamDuration"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Congestion" FontSize="20"/>
                            <TextBlock x:ConnectionId='12' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="StreamCongestion"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Total Frames" FontSize="20"/>
                            <TextBlock x:ConnectionId='11' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="StreamingTotalFrames"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Skipped Frames" FontSize="20"/>
                            <TextBlock x:ConnectionId='10' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="SkippedFramesStreaming"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Uploaded Bytes" FontSize="20"/>
                            <TextBlock x:ConnectionId='9' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="StreamingUploadedBytes"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <Grid>
                <TextBlock Text="Recording Info" FontSize="36" Margin="10"/>
                <ScrollViewer Margin="10,55,10,0">
                    <StackPanel>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Recording" FontSize="20"/>
                            <TextBlock x:ConnectionId='8' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="RecordingStatus"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Paused" FontSize="20"/>
                            <TextBlock x:ConnectionId='7' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="PausedStatus"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Time Code" FontSize="20"/>
                            <TextBlock x:ConnectionId='6' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="TimeCodeRecording"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Duration" FontSize="20"/>
                            <TextBlock x:ConnectionId='5' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="RecordingDuration"/>
                        </Grid>
                        <Grid Height="35">
                            <TextBlock VerticalAlignment="Center" Text="Recording Size" FontSize="20"/>
                            <TextBlock x:ConnectionId='4' VerticalAlignment="Center" Text="-" HorizontalAlignment="Right" FontSize="20" x:Name="RecordingSize"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </FlipView>
        <Grid x:ConnectionId='2' Visibility="Collapsed" HorizontalAlignment="Stretch" x:Name="OBSError" VerticalAlignment="Stretch">
            <Rectangle Fill="{ThemeResource CustomAcrylicInAppLuminosity}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                <TextBlock Text="OBS is not connected." HorizontalAlignment="Center" FontSize="36" Opacity="0.5"/>
                <Button x:ConnectionId='3' x:Name="ReconnectBtn" Content="Try to reconnect" HorizontalAlignment="Center"                       />
            </StackPanel>
        </Grid>
    </Grid>
</Page>

